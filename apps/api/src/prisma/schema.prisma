datasource db {
  provider = "sqlite"
  url      = "file:./data.db?connection_limit=1"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  createdAt   DateTime      @default(now())
  ChatMessage ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  message   String
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model PushMessage {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())
}
