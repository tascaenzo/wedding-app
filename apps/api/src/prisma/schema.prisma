datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  avatar      String
  createdAt   DateTime      @default(now())
  role        Role          @default(USER)
  ChatMessage ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  message   String
  time      String?
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model PushMessage {
  id        String   @id @default(cuid())
  message   String
  time      String?
  createdAt DateTime @default(now())
}

model Table {
  id      String    @id @default(cuid())
  number  Int
  label   String
  Invited Invited[]
}

model Invited {
  id        String @id @default(cuid())
  firstName String
  lastName  String
  tableId   String
  table     Table  @relation(fields: [tableId], references: [id])
}

model Meta {
  id    String @id @default(cuid())
  key   String @unique
  value String
}

enum Role {
  ADMIN
  USER
}
